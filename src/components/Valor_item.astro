---
const {name,description,icon}= Astro.props;

---


<div class="relative">
    <dt>
        <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-naranja text-white">
        
        <!-- Heroicon -->
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={`${icon}`} />
        </svg>
        </div>
        <p class="ml-16 text-lg leading-6 font-extrabold">{name}</p>
    </dt>
    <dd class="mt-2 ml-16 text-base">{description}</dd>
</div>
