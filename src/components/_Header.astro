---
import SocialButton from './SocialButtons.astro';
const { title } = Astro.props;
---

<header>
  <nav class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between">
      <div class="flex-1 flex items-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-left gap-2 mt-4">
          <img class="block h-10 w-auto" src="/img/logo_lorem.ico" alt="Lorem Ipsum">
          <p class="hidden md:block md:space-2 w-auto text-naranja font-extrabold text-4xl"> {title}</p>
        </div>

      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 mt-4 sm:static sm:inset-auto sm:ml-6 sm:pr-0 gap-2">
        <SocialButton social='instagram' />
        <SocialButton social='facebook' />
        <SocialButton social='youtube' />
      </div>
    </div>
  </nav>
</header>