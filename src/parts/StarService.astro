---
import { getBeneficios } from "../service/star_product.js";
import { getSingleInfo } from "../service/star_product.js";

const beneficios = await getBeneficios();
const info = await getSingleInfo();
const { frases, title, frase, parrafo } = info[0];
---

<div class="text-center text-white pb-10">
    <h2 class="text-base text-violeta-oscuro font-semibold tracking-wide uppercase">{frase.substring(0,26)}</h2>
    <p class="mt-2 md:text-5xl leading-8 font-extrabold tracking-tight sm:text-4xl">{title}</p>
    <p class="mt-4 max-w-2xl text-xl lg:mx-auto text-center sm:px-5 lg:px-0">{frases}</p>
</div>
<div class="mx-auto relative">
    <!--  <div class="absolute left-[-20px] top-[-30px]">
    <img src="/img/medal-lazo.svg" class="w-2/3  rotate-[-25deg]" alt="Medalla" loading="lazy">
    </div> -->
    <div class="text-white sm:px-6 lg:px-8">
        <div
            class="my-8 grid sm:grid-rows-3 md:grid-rows-1 sm:grid-flow-row md:grid-flow-col sm:gap-2 md:gap-20 justify-items-center">
            <div class="text-justify">
                <p class="text-xl font-semibold text-violeta-oscuro mb-3 text-left">{title}</p>
                <p class="mt-2">
                    {parrafo}.
                </p>
                <p>{frase} </p>
            </div>
            <div>
                <p class="text-xl font-semibold text-violeta-oscuro mb-3 text-left">{title}</p>
                <ul class="text-justify list-disc">
                    {
                    beneficios.map(({frase}) => (
                    <li>{frase}</li>
                    ))}
                </ul>
            </div>
            <div class="w-[150px] self-center">
                <img src="/img/star-product.svg" alt="IlustraciÃ³n rating " loading="lazy">
            </div>
        </div>
    </div>
</div>